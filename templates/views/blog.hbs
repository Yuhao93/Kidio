<body class="white-bg-body">

<nav class="navbar-default navbar-static-top" role="navigation">
	<div class="container-fluid">
		<div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/views/viewer">Kidio</a>
    </div>

 		<div class="collapse navbar-collapse" id="nav-collapse">
			<ul class="nav navbar-nav navbar-right">
				<li><a href="/about">About</a></li>
				<li><a href="/contact">Contact</a></li>
				<li class="active"><a href="/blog">News</a></li>
			</ul>
		</div>
	</div>
</nav>

<div class="jumbotron" style="background-image: url('/images/common/kidio_bg.jpg');background-position: center center;background-size:cover;padding:100px 0px;position:relative;color:white">
	<div style="position:absolute;top:0px;left:0px;right:0px;bottom:0px;background-color:black;opacity:.5;z-index:1"></div>
	<h1 style="position:relative;text-align:center;z-index:10">Kidio Blog</h1>
	<h4 style="position:relative;text-align:center;z-index:10">The latest news about Kidio</h4>
</div>

<div class="container" style="padding:0px 40px 40px 40px;margin-top:80px">
	<div class="row">
		<div class="col-sm-8 col-md-9">
			<!--<h4 class="text-weight-normal">Showing {{ data.posts.results.length}} post.</h4>-->
			<div class="blog">
				{{# each data.posts.results}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
					<h2><a class="blog-link" href="{{postUrl slug}}">{{{title}}}</a></h2>
					<hr style="margin: 5px 0px">
					Posted {{date publishedDate format='MMM Do YYYY'}}
					<hr style="margin: 5px 0px">
					<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p>
					<p>{{{content.extended}}}</p>
					<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>
				</div>
				{{/each}}
			</div>
		</div>
		<div class="col-sm-4 col-md-3">
			<h2>Categories</h2>
			<div style="margin-top: 70px;" class="list-group">
				<a href="/blog" class="active list-group-item">All Categories</a>
				{{# each data.categories }}
				<a href="{{categoryUrl key}}" class="false list-group-item">{{name}}</a>
				{{/each}}
			</div>
		</div>
	</div>
	{{>pagination}}
</div>
<script src="/js/lib/jquery/jquery-1.11.1.min.js"></script>
<script src="/js/lib/bootstrap/bootstrap-3.2.0.min.js"></script>
{{{isAdminEditorJS user}}}
</body>
